# display this heading
write (md)0x220+1 !BAT\necho -n -P:0000 $[0133] --- STEVE'S MENU --- \0
#write (md)0x220+1 !BAT\necho -n -P:0000 $[0133]--- CH-E-MISTRY PXE-BOOT Created by Humikacp ---\0
initscript (md)0x220+1

timeout 15
default /default

##################################################################################
title MemTest86+ \nMemory test tool

pxe keep
root (pd)/memtest/mt86plus_6.10_64.iso
map --mem (pd)/memtest/mt86plus_6.10_64.iso (0xff)
map --hook
root (0xff)
chainloader (0xff)
##################################################################################
title Boot from HDD

savedefault
ls /shifthd.bat > nul || find --set-root --devices=hf /shifthd.bat
/shifthd.bat
if "%RDSK%"=="" pause Fatal error while swaping hard disk order, cannot continue! && configfile /menu.lst
pause --wait=3 Booting MBR on hd0 ...
chainloader (hd0)+1
rootnoverify (hd0)
##################################################################################
title reboot

reboot
##################################################################################

title ipxe
map /ISO/ipxe.iso (0xff) || map --mem /ISO/ipxe.iso (0xff)
map --hook
root (0xff)
chainloader (0xff)
